<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="problem_status_style">
        <item name="android:background">@drawable/problem_status</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="grey_text">
        <item name="android:textColor">@color/category_text_color</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="black_text">
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="image_view_item">
        <item name="android:layout_width">@dimen/image_view_size</item>
        <item name="android:layout_height">@dimen/image_view_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="navigation_drawer_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
